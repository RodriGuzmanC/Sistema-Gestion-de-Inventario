{
  "compilerOptions": {
    "allowUmdGlobalAccess": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2015"], // Se agrego es2015
    "target": "es2015",  // o "es2016", "es2017", etc.
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "google-one-tap.d.ts"],
  "exclude": ["node_modules"]
}
